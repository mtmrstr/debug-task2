    <table class='table'>
       <% book.book_comments.each do |book_comment| %>
        <tbody>
      <tr>
        <td>
          <%= image_tag book_comment.user.get_profile_image ,size:'50x50' %>
        </td>
        <td>
       <%= link_to book_comment.user.name , user_path(book_comment.user) %>
       </td>
       <td>
       <%= book_comment.comment %>
        </td>
        <td>
         <% if book_comment.user == current_user %>
          <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
         <% end %>
         </td>
          </tr>
     </tbody>
      <% end %>
      </table>
      <div id = "book_comment_<%= book_comment.id %>">
      <%= render 'books/comment' ,book: book ,book_comment: book_comment%>
       </div>